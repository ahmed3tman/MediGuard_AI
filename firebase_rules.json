{
  "rules": {
    "users": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId",
        "patients": {
          "$deviceId": {
            ".validate": "newData.hasChildren(['deviceId']) && newData.child('deviceId').val() == $deviceId"
          }
        },
        "criticalCases": {
          "$deviceId": {
            ".validate": "newData.hasChildren(['deviceId']) && newData.child('deviceId').val() == $deviceId"
          }
        }
      }
    },
    "devices": {
      "$deviceId": {
        "readings": {
          ".read": "auth != null && root.child('users').child(auth.uid).child('patients').child($deviceId).exists()",
          ".write": "auth != null && root.child('deviceOwners').child($deviceId).val() == auth.uid",
          "$other": {
            ".validate": "newData.isNumber() || newData.hasChildren()"
          }
        }
      }
    },
    "deviceOwners": {
      "$deviceId": { ".read": "auth != null", ".write": "auth != null" }
    }
  }
}
